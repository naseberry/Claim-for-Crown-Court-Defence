%tr.no-border
  %td
    = expense.pretty_date
  %td{scope: 'row'}
    %span.bold-normal
      = expense.name
  %td
    .bold-normal
      = expense.reason
    %br
    .details
      %ul
        %li
          %span.bold
            = succeed ':' do
              = t('.destination')
          = expense.location
        - if expense.distance?
          - if claim.lgfs?
            %li{ class: ('error' if expense.diff_distances?) }
              %span.bold
                = succeed ':' do
                  = t('.calculated_distance')
              = expense.pretty_calculated_distance
          %li
            %span.bold
              = succeed ':' do
                = t('.distance')
            = "#{expense.distance} miles"
          %li
            %span.bold
              = succeed ':' do
                = t('.cost')
            = expense.mileage_rate
        - if expense.hours?
          %li
            %span.bold
              = succeed ':' do
                = t('.hours')
            = expense.hours
  %td.numeric
    = expense.amount
  %td.numeric
    = expense.vat_present? ? expense.vat_amount : ''
  %td.numeric
    = expense.gross_amount
